<% name = user_signed_in? ? current_user.name : 'Stranger' %>
<%= render 'shared/click' %>
<h1 style="margin-bottom:.4em">Hello, <%= name %></h1>

<% if user_signed_in? %>
  <div style="text-align:right">
    <%= button_to 'New post', new_post_path, method: :get, class: 'btn btn-dark', style: 'margin-bottom:20px' %>
  </div>
<% else %>
  <p>
    Please <%= link_to 'sign in', new_user_session_path %>, or <%= link_to 'join us', new_user_registration_path %> now!
  </p>
<% end %>

<style>
  /* Make the image fully responsive */
  .carousel-inner img {
      width: 100%;
      height: 100%;
  }
</style>

<div id="slide" class="carousel slide" data-ride="carousel">
 
  <ul class="carousel-indicators">
    <li data-target="#slide" data-slide-to="0" class="active"></li>
    <li data-target="#slide" data-slide-to="1"></li>
    <li data-target="#slide" data-slide-to="2"></li>
  </ul>

  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="<%= asset_path('slide1.jpg') %>">
    </div>
    <div class="carousel-item">
      <img src="<%= asset_path('slide2.jpg') %>">
    </div>
    <div class="carousel-item">
      <img src="<%= asset_path('slide3.jpg') %>">
    </div>
  </div>
 
  <a class="carousel-control-prev" href="#slide" data-slide="prev">
    <span class="carousel-control-prev-icon"></span>
  </a>
  <a class="carousel-control-next" href="#slide" data-slide="next">
    <span class="carousel-control-next-icon"></span>
  </a>
 
</div>

<%#= will_paginate @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
<%= paginate @posts %>

<br>
<% @posts.each_with_index do |post, index| %>
  <% if index % 2 == 0 %>
    <div class="card bg-light">
      <%= link_to post.title, post, class: 'card-body text-dark' %>
    </div>
  <% else %>
    <div class="card bg-dark">
      <%= link_to post.title, post, class: 'card-body text-light' %>
    </div>
  <% end %>
<% end %>
<br>

